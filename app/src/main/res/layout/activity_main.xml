<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/unifagoclogo" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInput_nota1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toStartOf="@id/right_guide"
        app:layout_constraintStart_toEndOf="@id/left_guide"
        app:layout_constraintTop_toBottomOf="@+id/img_logo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_nota1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite sua primeira nota."
            android:inputType="number|numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInput_nota2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toStartOf="@id/right_guide"
        app:layout_constraintStart_toEndOf="@id/left_guide"
        app:layout_constraintTop_toBottomOf="@+id/textInput_nota1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_nota2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite sua segunda nota."
            android:inputType="number|numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInput_nota3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toStartOf="@id/right_guide"
        app:layout_constraintStart_toEndOf="@id/left_guide"
        app:layout_constraintTop_toBottomOf="@+id/textInput_nota2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_nota3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite sua terceita nota."
            android:inputType="number|numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Exemplo de nota &quot;7.6&quot;"
        app:layout_constraintEnd_toStartOf="@+id/right_guide"
        app:layout_constraintStart_toStartOf="@+id/left_guide"
        app:layout_constraintTop_toBottomOf="@+id/textInput_nota3" />

    <Button
        android:id="@+id/btn_calc"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:text="Calcular "
        app:icon="@android:drawable/ic_menu_add"
        app:layout_constraintEnd_toStartOf="@+id/right_guide"
        app:layout_constraintStart_toStartOf="@+id/left_guide"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>